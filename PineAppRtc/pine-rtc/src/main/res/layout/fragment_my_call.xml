<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房间"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在通话中"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/button_call_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/switch_camera_ic"
            android:text="切换摄像头" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_record_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/video_recorder_ic"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/call_record"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/button_call_capture_screen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/screen_shot_ic"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/call_capture_screen"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/button_call_disconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="15dp"
            android:src="@drawable/end_call" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_call_toggle_mic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/mute"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/call_mic_mute"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:visibility="gone"/>
            <!--<TextView-->
                <!--android:id="@+id/button_call_switch_camera"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:drawableTop="@drawable/switch_camera_ic"-->
                <!--android:gravity="center"-->
                <!--android:padding="10dp"-->
                <!--android:singleLine="true"-->
                <!--android:text="@string/switch_cam"-->
                <!--android:textColor="#FFFFFF"-->
                <!--android:textSize="14sp" />-->

            <TextView
                android:id="@+id/button_call_toggle_speaker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/speaker"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/call_speaker"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
